{
    "name": "taskman-cli",
    "version": "1.0.0",
    "description": "TaskMan CLI - Manage tasks from your terminal",
    "type": "module",
    "bin": {
        "taskman": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
        "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch"
    },
    "keywords": [
        "taskman",
        "cli",
        "tasks",
        "productivity"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.5",
        "chalk": "^5.3.0",
        "cli-table3": "^0.6.3",
        "commander": "^11.1.0",
        "conf": "^12.0.0",
        "date-fns": "^3.3.1",
        "inquirer": "^9.2.12"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.7",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.11.5",
        "cross-env": "^10.1.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.6",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
