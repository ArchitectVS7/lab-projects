# DataSync Environment Variables
# Copy this to .env and fill in your values

# PostgreSQL connection string
POSTGRES_URI=postgresql://postgres:your_password@localhost:5432/datasync_db

# MongoDB connection string
MONGO_URI=mongodb://mongo:your_password@localhost:27017/datasync_db?authSource=admin

# Optional: For replica set (enables change streams for real-time sync)
# MONGO_URI=mongodb://mongo:your_password@localhost:27017/datasync_db?authSource=admin&replicaSet=rs0
