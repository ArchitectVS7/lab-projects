  "description": "E2E tests for Task Management SaaS apps",
  "scripts": {
    "test:app1": "APP_URL=http://localhost:3000 API_URL=http://localhost:4000 npx playwright test",
    "test:app2": "APP_URL=http://localhost:5174 API_URL=http://localhost:3001 npx playwright test",
    "test:all": "npm run test:app1 && npm run test:app2",
    "test:app1:headed": "APP_URL=http://localhost:3000 API_URL=http://localhost:4000 npx playwright test --headed",
    "test:app2:headed": "APP_URL=http://localhost:5174 API_URL=http://localhost:3001 npx playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.11.0"
  }
}
